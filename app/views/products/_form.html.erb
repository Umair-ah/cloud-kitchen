<%= form_with(url: category_product_path(@category.title, @product.title), method: :patch, multipart: true) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= fields_for :product, @product do |f| %>
    <div>
      <%= f.label :title, style: "display: block" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description, style: "display: block" %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :quantity, style: "display: block" %>
      <%= f.number_field :quantity %>
    </div>

    <div>
      <%= f.label :price, style: "display: block" %>
      <%= f.text_field :price %>
    </div>

    <div>
      <%= f.label :ingredients, style: "display: block" %>
      <%= f.text_field :ingredients %>
    </div>

    <div>
      <%= f.label :images, style: "display: block" %>
      <%= f.file_field :images, multiple: true %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<h1 class="text-3xl font-bold mb-8">Categories</h1>

<div id="categories" class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @categories.each do |category| %>
    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
      <h2 class="text-xl font-semibold mb-4"><%= category.title %></h2>
      <div class="mb-4">
        <% if category.image.present? %>
          <%= image_tag(category.image, class: "w-full h-48 object-cover rounded-lg") %>
        <% else %>
          <p class="text-gray-500">No image available</p>
        <% end %>
      </div>
      <p>
        <%= link_to "Show this category", category_path(category.title), class: "inline-block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition" %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%= link_to "New category", new_category_path, class: "inline-block bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition" %>
</div>
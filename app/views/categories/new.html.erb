<%= form_with(model: @category, html: { class: "space-y-4" }) do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Errors:</strong>
      <ul class="list-disc pl-5 mt-2">
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col space-y-2">
    <%= form.label :title, class: "text-gray-700 font-medium" %>
    <%= form.text_field :title, class: "form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" %>
  </div>

  <div class="flex flex-col space-y-2">
    <%= form.label :image, class: "text-gray-700 font-medium" %>
    <%= form.file_field :image, class: "form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" %>
  </div>

  <% if form.object.image.present? %>
    <div class="mt-4">
      <img src="<%= url_for(form.object.image) %>" alt="Category Image" class="w-32 h-32 object-cover rounded-lg">
    </div>
  <% end %>

  <div class="mt-4">
    <%= form.submit class: "bg-blue-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
